<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <section class="order-cookie">
            <h2 class="order-cookie__heading">
                A MILLION FREE COOKIES!
            </h2>
            <form class="order-cookie__form" action="/checkout/662fb2071269656bf876deba" method="get">
                <input class="order-cookie__image" type="image" src="images/cookie.png" width="300px" height="300px" alt="submit" >
            </form>
            <h2 class="order-cookie__heading">
                Only 45.212 left!
            </h2>
        </section>
        <section class="products-preview">
            <h2 style="text-align: center; width: 100%;">
                Our Products
            </h2>
            <% if (products.length > 0) { %>
                <div class="product-list">
                    <% for (let product of products) { %>
                        <%- include('includes/product-card.ejs', {product: product}) %>
                    <% } %>
                </div>
                <%- include('includes/pagination.ejs', {pagination: pagination}) %>
                <% } else { %>
                    <h2 style="text-align: center;">
                        No products found.
                    </h2>
                    <% } %>
        </section>
    </main>
<%- include('includes/end.ejs') %>